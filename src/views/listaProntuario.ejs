            </div>
            <div>
                <img src="/img/logo.png" alt="logo Toothmanager">
            </div>


          <form action="#" method="get">
            <input type="text" placeholder="Buscar paciente.." name="search">
            <button type="submit"><i class="fa fa-search"></i></button>
          </form>
        </div>

        <!-- Prontuario -->

        <div class="container-cards">

            <div class="subtitulo">
                <h2>Lista de Prontuarios</h2>
            </div>
            <br>

            <div class="novo-prontuario-button">
                <div><a href="/criarprontuario"> + Novo Prontuario</a></div>
            </div>
            <br>

            <div class="cards-pront">
