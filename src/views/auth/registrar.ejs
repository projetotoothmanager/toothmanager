<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="css/register.css">
        <link rel="stylesheet" href="css/main.css">
        <script src="https://kit.fontawesome.com/7491f3e6c6.js" crossorigin="anonymous"></script>
        <title>ToothManager</title>
    </head>
    <body>
        <!-- button-menu-hamburguer -->
        <input type="checkbox" id="check">
        <label for="check" class="menu-hamburgue">
            <i class="fas fa-bars" id="btn"></i>
            <i class="fas fa-times" id="cancel"></i>
        </label>
        <%- include('../partials/sidebar')%>
        <main>
            <div class="container">
                <div>
                    <h2>Registrar</h2>
                </div>
                <form action="/registrar" method="post">
                    <div class="form-content">
                        <label for="name">Nome:</label>
                        <input type="text" name="name" placeholder="Seu nome" id="name" required>
                        <label for="name">E-mail:</label>
                        <input type="email" name="email" placeholder="email@email.com" id="email" required>
                        <label for="password">Password:</label>
                        <input type="password" name="password" placeholder="Digite sua senha" id="password" required>
                        <label for="confirm-password">Confirm Password:</label>
                        <input type="password" name="confirmpassword" placeholder="Confirme a senha" id="confirm-password" required>
                    </div>
                    <input type="submit" value="Cadastrar" class="registerbtn" id="button">
                    <br>
                </form>
            </div>
        </main>
        <script src="validations/validRegistrar.js"></script>
    </body>
</html>