<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- CSS -->
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/listaProntuario.css">
        <!-- script -->
        <script src="https://kit.fontawesome.com/7491f3e6c6.js" crossorigin="anonymous"></script>
        <title>Toothmanager</title>
    </head>
    <body>
        <!-- button-menu-hamburguer -->
        <input type="checkbox" id="check">
        <label for="check" class="menu-hamburgue">
            <i class="fas fa-bars" id="btn"></i>
            <i class="fas fa-times" id="cancel"></i>
        </label>
        <!-- sidebar -->
        <%- include('./partials/sidebar')%>

        <main>
            <!-- barra de busca -->
            <div class="cabecalho-container">
                <div class="title-pagina">
                    <h1>Prontuario</h1>
                </div>
            </div>
            <!-- Prontuario -->
            <% if ( messages.message ) { %>
            <div class="flash"><%= messages.message %></div>
            <% } %>
            <div class="container-cards">
                <div class="subtitulo">
                    <h2>Lista de Prontuarios</h2>
                </div>
                <br>
                <div class="novo-prontuario-button">
                    <div><a href="/addprontuario"> + Novo Prontuario</a></div>
                </div>
                <br>
                <% prontuarios.forEach((prontuarios) => { %>
                    <div class="cards-pront">
                        <div>
                            <label for=""><strong>ID:</strong></label>
                            <span><%= prontuarios.id %></span>
                        </div>
                        <div>
                            <label for=""><strong>Paciente:</strong></label>
                            <span><%= prontuarios.nome %></span>
                        </div>
                        <div>
                            <label for=""><strong>Atendimento:</strong></label>
                            <span><%= prontuarios.atendimento %></span>
                        </div>
                        <div>
                            <label for=""><strong>Dentista:</strong></label>
                            <span><%= prontuarios.dentista %></span>
                        </div>
                        <div>

                        </div>
                        <form action="/prontuarios/remove/<%= prontuarios.id%>" method="POST">
                            <input type="hidden" name="id" value="<%= prontuarios.id%>">
                            <button class="btn-editar" type="submit" class="btn">Deletar</button>
                        </form>
                        <button class="btn-editar"><a href="/detalhesProntuario/<%= prontuarios.id%>">Detalhes</a></button>
                        <button class="btn-editar"><a href="/prontuarios/editProntuarios/<%= prontuarios.id%>">Editar</a></button>
                    </div>
                <% }) %>
            </div>
        </main>
    </body>
</html>