<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/agenda.css">
    <script src="https://kit.fontawesome.com/7491f3e6c6.js" crossorigin="anonymous"></script>
    <title>Toothmanager</title>

</head>

<% if ( messages.message ) { %>
    <div class="flash">
        <%= messages.message %>
    </div>
    <% } %>

        <body>
            <!-- button-menu-hamburguer -->
            <input type="checkbox" id="check">
            <label for="check" class="menu-hamburgue">
                <i class="fas fa-bars" id="btn"></i>
                <i class="fas fa-times" id="cancel"></i>
            </label>

            <!-- sidebar -->
            <%- include('./partials/sidebar')%>

                <!-- <main> coloque seu codigo dentro desta tag -->
                <main>
                    <!-- BUSCA -->
                    <div class="search-container">
                        <div class="title-pagina">
                            <h1>Agenda</h1>
                        </div>
                        <form action="#" method="get">
                            <input type="text" placeholder="Buscar.." name="search">
                            <button type="submit"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                    <!-- AGENDA -->



                    <div class="container-agenda">
                        <form action="/agendamento" method="post" class="form">
                            <div class="form-content">
                                <label for="">Hora:</label>
                                <input type="time" name='hora' min="09:00" max="18:00" required>
                                <label for="">Data:</label>
                                <input type="date" name='data' required>
                                <label for="">Nome:</label>
                                <input type="text" name='nome' required>
                            </div>
                            <button type="submit" id="Salvar" class="btn"> Adicionar </button>
                        </form>

                        <br>
                        <% agendamentos.forEach((agendamentos) => { %>
                            <div class="lista-agenda">
                                <label for="">Hora:</label>
                                <span><%= agendamentos.hora %></span>
                                <label for="">Data:</label>
                                <span><%= agendamentos.data %></span>
                                <label for="cliente" name="cliente" id="cliente">Nome:</label>
                                <span><%= agendamentos.nome %></span>
                                <button type="button" class="btn">Deletar</button>
                                <button type="button" class="btn">Editar</button>
                            </div>

                       <% }) %>
                        
                        <br>
                    </div>

                </main>

        </body>

</html>